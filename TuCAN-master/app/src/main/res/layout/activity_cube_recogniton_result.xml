<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moca.clockdraw.CubeRecognitionResult">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eins_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/zwei_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/drei_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/vier_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fuenf_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/sechs_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/sieben_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/acht_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textlines"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/bild_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textlines"
            android:text="gemittelte Eckpunkte"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/links_b"
                android:layout_width="10mm"
                android:layout_height="fill_parent"
                android:text="&lt;"
                android:textSize="40sp"
                android:layout_weight = "0"/>

            <ImageView
                android:id="@+id/bild_iv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:contentDescription="@string/text_datenanalyse_vorschaubild"
                android:src="@drawable/ic_empty_set_mathematical_symbol"
                tools:ignore="InOrMmUsage"
                android:layout_weight = "1"/>

            <Button
                android:id="@+id/rechts_b"
                android:layout_width="10mm"
                android:layout_height="fill_parent"
                android:text="&gt;"
                android:textSize="40sp"
                android:layout_weight = "0"/>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
